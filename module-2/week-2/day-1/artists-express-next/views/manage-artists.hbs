<h1 class="title">Artists manager</h1>
<table class="tabler styles">
    <thead class="head">
        <tr>
            <th>name</th>
            <th>genre</th>
            <th>is a band</th>
            <th>edit</th>
            <th>delete</th>
        </tr>
    </thead>
    <tbody class="body">

        {{#unless artists}}
        <tr>
            <td colspan="5">no artists yet</td>
        </tr>
        {{/unless}}

        {{#each artists}}
        <tr>
            <td>
                <a class="link" href="/artist/{{this._id}}">{{this.name}}</a>
            </td>
            <td>
                <a href="{{this.style.wikiURL}}" target="_blank">
                    {{this.style.name}}
                </a>
            </td>
            <td>
                {{#if this.isBand}}
                <i class="fas fa-check"></i>
                {{/if }}
            </td>
            <td>
                <a class="fas fa-pen" href="/edit-artist/{{this._id}}"></a>
            </td>
            <td>
                <a class="fas fa-times" href="/delete-artist/{{this._id}}"></a>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>