<h1 class="title">Albums manager</h1>
<table class="tabler styles">
    <thead class="head">
        <tr>
            <th>title</th>
            <th>artist</th>
            <th>released</th>
            <th>edit</th>
            <th>delete</th>
        </tr>
    </thead>
    <tbody class="body">

        {{#unless albums}}
        <tr>
            <td colspan="5">no albums yet</td>
        </tr>
        {{/unless}}

        {{#each albums}}

        {{!-- <pre>{{this.artist}}</pre> --}}
        
        <tr>
            <td>{{this.title}}</td>
            <td>
                {{this.artist.name}}
            </td>
            <td>
                {{format-date this.releaseDate '' }}
            </td>
            <td>
                <a class="fas fa-pen" href="/edit-album/{{this._id}}"></a>
            </td>
            <td>
                <a class="fas fa-times" href="/delete-album/{{this._id}}"></a>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>